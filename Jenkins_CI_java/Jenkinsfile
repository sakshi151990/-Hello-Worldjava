pipeline {
   agent  {
  label 'slavedocker'
  }
   tools {
    jdk 'java'
    maven 'maven'
   }
   stages {
    stage ('checkOut') {
      steps{
        git branch: 'xebia_poc', credentialsId: 'jenkinsuser', url: 'https://github.com/sakshi151990/Java_Jenkins_CI.git'
      }
    }
    stage ('Build') {
      steps{
        echo "Build"
        sh 'mvn clean compile -f Jenkins_CI_java/pom.xml'
      }
    }
    stage ('Test') {
      steps {
        echo "Testing"
        sh 'mvn -Dmaven.test.failure.ignore=true test -f Jenkins_CI_java/pom.xml' 
        }
       post {
        success {
                junit 'Jenkins_CI_java/target/surefire-reports/**/*.xml' 
        }
       }
    }
    stage ('Package') {
      steps {
        echo "Packaging"
        sh 'mvn install -f Jenkins_CI_java/pom.xml' 
        }  
    }    
     stage ('Build Image') {
      steps {
        echo "Build Image"
        sh '''docker --version
             docker build -t unimoni_poc ${WORKSPACE}/Jenkins_CI_java --build-arg APPWORKSPACE=${WORKSPACE}
             docker images'''
      }
     }
      stage ("Push to DockerHub"){ 
          steps {
              withDockerRegistry(credentialsId: 'dockerhub', url: 'https://index.docker.io/v1/') {
          sh '''
          docker tag unimoni_poc:latest sakshikansal/unimoni_poc:latest
          docker push sakshikansal/unimoni_poc:latest'''
          
               }
          } 

      } 
         stage ("Deploy to openshift"){
          steps {
            withCredentials([string(credentialsId: 'openshiftlogin', variable: 'openshiftlogin')]) {
            sh '''
              oc login https://api.starter-us-east-1.openshift.com --token=${openshiftlogin}

               oc get dc | grep "samplejavaci"
             if [ $? -eq 0 ]; then
                oc delete dc "samplejavaci"
             fi

            oc create -f ${WORKSPACE}/Jenkins_CI_java/DeploymentConfig.yaml
            oc deploy "samplejavaci" 
            oc volume dc/samplejavaci --add --claim-size 512M --mount-path /data --name volumepoc '''
            }
          }
         }
      }
   }

